<!DOCTYPE html>
<html>
  <head>
    <title>LetsRun</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  </head>

  <body>
    <nav class="navbar navbar=default">
      <div class="container">
        <div class="navabar-header">
          <%= link_to "Let's Run", root_path, class:"navbar-brand" %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if current_runner.present? %>
          <li><%= link_to "RUNNER QUIT", destroy_runner_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "RUNNER SIGN IN", new_runner_session_path %></li>
          <li><%= link_to "START RUNNING", new_runner_registration_path %></li>
        <% end %>
      </ul>
      <% if runner_signed_in? %>
          <%= link_to "New Workout", new_workout_path, class: "navbar-brand" %>
      <% end %>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </div class="container">
    <%= yield %>
  </div>

</div>
</html>
